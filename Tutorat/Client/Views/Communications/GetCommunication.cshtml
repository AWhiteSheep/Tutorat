@model IEnumerable<Client.Data.Communication>

<h4 class="mt-4">Liste des communications</h4>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FromUserNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SendToNavigation)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FromUserNavigation.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SendToNavigation.UserName)
            </td>
        </tr>
}
    </tbody>
</table>
